{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug with qemu within Docker",
            "type": "cppdbg",
            "request": "launch",
            "program": "/build/qemu/build/sh4eb-softmmu/qemu-system-sh4eb",
            "args": [
                "-monitor", "telnet:0.0.0.0:1201,server,nowait",
                "-serial", "tcp::1202,server,nodelay",
                "-drive", "file=SPIROM.BIN,if=mtd,format=raw",
                "-drive", "file=lyricspanel_sdcard_fullcontents.img,if=sd,format=raw",
                "-s",
                "-S",
                "-trace", "events=/build/qemu/trace.events",
            ],
            "stopAtEntry": true,
            "cwd": "/build/qemu",
            "environment": [],
            "externalConsole": true,
            "pipeTransport": {
                "pipeCwd": "",
                "pipeProgram": "docker.exe",
                "pipeArgs": ["exec","-i","debug_qemu","sh","-c"],
                "debuggerPath": "/usr/bin/gdb"
            },
            "MIMode": "gdb",
            //"miDebuggerPath": "/path/to/gdb",
            "setupCommands": [
                {
                    "description": "gdb の再フォーマットを有効にする",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ],
            "preLaunchTask": "prelaunch gdb",
            "postDebugTask": "postdebug gdb",
            "sourceFileMap": {
                "/build/qemu": "${workspaceFolder:qemu}"
            }
        }
    ]
}